<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <td><h4 class="text-dark">Name</h4></td>
      <td><h4 class="text-dark">Cpf</h4></td>
      <td><h4 class="text-dark">Phone</h4></td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><h6 class="text-dark"><%= person.name %></h6></td>
        <td><h6 class="text-dark"><%= person.cpf %></h6></td>
        <td><h6 class="text-dark"><%= person.phone %></h6></td>
        <td><h6><button type="button" class="btn btn-sm btn-dark"><%= link_to 'Show', person %></button></h6></td>
        <td><h6><button type="button" class="btn btn-sm btn-dark"><%= link_to 'Edit', edit_person_path(person) %></button></h6></td>
        <td><h6><button type="button" class="btn btn-sm btn-dark"><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></button></h6></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="people/new">
  <button type="button" class="btn btn-dark">New Person</button>
</a>