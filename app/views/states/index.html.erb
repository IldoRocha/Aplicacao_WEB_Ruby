<p id="notice"><%= notice %></p>

<h1>States</h1>

<table>
  <thead>
    <tr>
      <td><h4 class="text-dark">Name</h4></td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr class="table-dark">
        <td><h6 class="text-dark"><%= state.name %></h6></td>        
        <td><h6><button type="button" class="btn btn-sm btn-dark"><%= link_to 'Show', state %></button></h6></td>
        <td><h6><button type="button" class="btn btn-sm btn-dark"><%= link_to 'Edit', edit_state_path(state) %></button></h6></td>
        <td><h6><button type="button" class="btn btn-sm btn-dark"><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></button></h6></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="states/new">
  <button type="button" class="btn btn-dark">New State</button>
</a>